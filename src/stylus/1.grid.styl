
/* i'm too flexy for my grid */
.flex-grid
  position relative
  display flex
  flex-flow row wrap
  justify-content space-between

.flex-col-1-2
  flex 1
  flex-basis 49%
  max-width 49%
  margin-bottom 10px

.flex-col-1-3
  flex 1
  flex-basis 31%
  max-width 31%
  margin-bottom 10px

.flex-col-2-3
  flex 1
  flex-basis 65%
  max-width 65%
  margin-bottom 10px

.flex-col-1-4
  flex 1
  flex-basis 24%
  max-width 24%
  margin-bottom 10px
  
.flex-col-1-5
  flex 1
  flex-basis 19%
  max-width 19%
  margin-bottom 10px

@media only screen and (max-width: 981px)
  .flex-col
    flex-basis 33%

@media only screen and (max-width: 768px)
  .flex-col
    flex-basis 50%

@media only screen and (max-width: 700px)
  .flex-grid
    margin-left 0
  .flex-col
    flex-basis auto
